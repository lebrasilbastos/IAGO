#include <stdio.h>

int main() {
    int matriz[2][2]; // Declara uma matriz 2x2
    int i, j;

    // Leitura dos elementos da matriz
    printf("Digite os elementos da matriz 2x2:\n");
    for(i = 0; i < 2; i++) {
        for(j = 0; j < 2; j++) {
            printf("Elemento [%d][%d]: ", i, j);
            scanf("%d", &matriz[i][j]);
        }
    }

    // ImpressÃ£o dos elementos da matriz
    printf("\nMatriz digitada:\n");
    for(i = 0; i < 2; i++) {
        for(j = 0; j < 2; j++) {
            printf("%d\t", matriz[i][j]);
        }
        printf("\n");
    }

    return 0;
}
