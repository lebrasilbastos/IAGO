#include <stdio.h>

int main() {
    int matriz[3][2];
    int i, j;
    int pares = 0;

    // Leitura da matriz 3x2
    printf("Digite os elementos da matriz 3x2:\n");
    for(i = 0; i < 3; i++) {
        for(j = 0; j < 2; j++) {
            printf("Elemento [%d][%d]: ", i, j);
            scanf("%d", &matriz[i][j]);

            // Verifica se o número é par
            if(matriz[i][j] % 2 == 0) {
                pares++;
            }
        }
    }

    // Mostra a quantidade de pares
    printf("\nQuantidade de números pares digitados: %d\n", pares);

    return 0;
}
